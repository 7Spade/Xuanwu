# Force usage of pnpm
# This file helps IDEs and tools understand this is a pnpm project

# Ensure pnpm is used (not npm)
engine-strict=true

# Use pnpm store
store-dir=.pnpm-store

# Hoist dependencies for better compatibility
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies (but don't fail on missing)
strict-peer-dependencies=false
